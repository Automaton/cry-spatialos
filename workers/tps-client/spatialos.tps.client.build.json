{
  "tasks": [
    {
      "name": "Codegen",
      "steps": [
        {
          "name": "Dependencies",
          "arguments": [
            "worker_package",
            "unpack"
          ]
        },
        {
          "name": "C++ standard library",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_std",
            "--output=Code/Generated/std",
            "--language=cpp",
            "--input=../../build/dependencies/schema/standard_library"
          ]
        },
        {
          "name": "C++",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=.spatialos/schema_codegen_cache_usr",
            "--output=Code/Generated/usr",
            "--language=cpp",
            "--input=../../schema",
            "--dependency=../../build/dependencies/schema/standard_library"
          ]
        },
        {
          "name": "Json AST",
          "arguments": [
            "process_schema",
            "generate",
            "--cachePath=generated/schema_codegen_cache_json",
            "--output=generated/json",
            "--language=ast_json"
          ]
        }
      ]
    },
    {
      "name": "Build",
      "steps": [
        {
          "name": "Codegen",
          "arguments": [
            "invoke-task",
            "Codegen"
          ]
        }
      ]
    },
    {
      "name": "Clean",
      "steps": [
        {
          "name": "Generated files",
          "arguments": [
            "process_schema",
            "clean",
            ".spatialos",
            "Code/Generated"
          ]
        },
        {
          "name": "Worker packages",
          "arguments": [
          	"worker_package",
          	"clean"
          ]
        }
      ]
    }
  ]
}
